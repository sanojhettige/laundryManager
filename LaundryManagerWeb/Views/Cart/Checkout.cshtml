@model LaundryManagerWeb.ViewModels.OrderFormViewModel
@{ ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_FE_Layout.cshtml"; }

@section styles
{
    @Styles.Render("~/bundles/datepicker-css")
}

@using (Html.BeginForm("Checkout", "Cart"))
{
    @Html.ValidationSummary()
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Order.CustomerName)
                        @Html.TextBoxFor(m => m.Order.CustomerName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Order.CustomerName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Order.CustomerPhone)
                        @Html.TextBoxFor(m => m.Order.CustomerPhone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Order.CustomerPhone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Order.PickUpPerson)
                        @Html.TextBoxFor(m => m.Order.PickUpPerson, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Order.PickUpPerson, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Order.PickUpPersonPhone)
                        @Html.TextBoxFor(m => m.Order.PickUpPersonPhone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Order.PickUpPersonPhone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Order.PickUpDateTime)
                        @Html.TextBoxFor(m => m.Order.PickUpDateTime, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Order.PickUpDateTime, "", new { @class = "text-danger datepicker" })
                    </div>
                </div>
                <div class="col-md-5">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model.CartItem)
                            {
                                <tr>
                                    <td>@x.Name</td>
                                    <td>@x.Quantity @x.UnitType</td>
                                    <td>@x.Price</td>
                                    <td>@x.Price * @x.Quantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12">
                    @Html.HiddenFor(m => m.Order.UserId)
                    <button type="submit" class="btn btn-primary">Place Order</button>
                </div>
            </div>

        </div>
    </section>
}

@section scripts
{
    @Scripts.Render("~/bundles/datepicker-js")
}