@model LaundryManagerWeb.ViewModels.OrderFormViewModel
@{ ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_FE_Layout.cshtml"; }

<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>ABC Laundry - Shop</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="productcont">
                    @foreach (var x in Model.Category)
                    {
                        <div class="product col-md-4">
                            <div class="product-img">
                                @if (x.Id == 1)
                                {<img src="~/Assets/Img/category-1.png" alt="">}
                                else if (x.Id == 2)
                                {<img src="~/Assets/Img/category-2.png" alt="">}
                                else
                                {<img src="~/Assets/Img/category.png" alt="">}
                            </div>
                            <div class="product-details">
                                <h3 class="productname">@x.Name</h3>
                                <p>Product description excerpt...</p>
                                <p class="price">Rs. @x.UnitCharge</p>
                                <input type="hidden" value="@x.Id" name="id" />
                            </div>
                            <div class="product-footer">
                                @Html.ActionLink("Add to Cart", "Add/" + x.Id, "Cart", new { @class = "btn-addtocart btn btn-primary" })
                            </div>
                        </div>

                    }
                </div>
            </div>
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.CartItem)
                        {
                            <tr>
                                <td>@x.Name</td>
                                <td>@x.Quantity @x.UnitType</td>
                                <td>@x.Price</td>
                                <td>
                                @{ 
                                    var total = Convert.ToDecimal(x.Price * x.Quantity);
                                }
                                @total
                                </td>
                                <td>
                                    @Html.ActionLink("Remove", "Remove/" + x.Id, "Cart", new { @class = "btn-remove genric-btn danger btn-sm radius" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-12">
                @Html.ActionLink("CheckOut", "Checkout", "Cart", new { @class = "btn-checkout btn btn-sm btn-danger" })
            </div>
        </div>

    </div>
</section>